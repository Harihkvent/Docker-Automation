{
  "name": "docker-automation-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Docker Automation â€” manage Docker containers from your local system",
  "main": "electron/main.js",
  "author": "Harihkvent",
  "license": "ISC",
  "private": true,
  "scripts": {
    "install:client": "npm install --prefix client",
    "install:server": "npm install --prefix server",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "build:client": "cross-env REACT_APP_API_URL=http://localhost:5000 npm run build --prefix client",
    "build:server": "npm run build --prefix server",
    "build:all": "npm run build:server && npm run build:client",
    "start:electron": "electron .",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "dist:win": "npm run build:all && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "dist": "npm run build:all && electron-builder"
  },
  "build": {
    "appId": "com.harihkvent.docker-automation",
    "productName": "Docker Automation",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "client/build/**/*",
      "server/dist/**/*",
      "server/node_modules/**/*",
      "server/package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "client/public/docker.png",
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "client/public/docker.png",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Harihkvent",
        "repo": "Docker-Automation"
      }
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8"
  }
}
